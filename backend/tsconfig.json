{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "paths": {
            "~*": ["./*"]
        },
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "src",
        "sourceRoot": "/",
        "inlineSources": true,
        "incremental": true,
        "noUnusedLocals": false,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "lib": ["es2020.string"]
    },
    "exclude": ["node_modules", "dist", "data"]
}
